<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3e5f5"
    tools:context="com.example.aadharcardverify.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/edtAadhar"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="66dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/round_shape"
        android:ems="10"
        android:hint="Enter  Aadhar Number"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnResend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="94dp"
        android:text="send"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnResend"
        app:layout_constraintEnd_toStartOf="@+id/btnResend"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnResend"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginBottom="63dp"
        android:layout_marginEnd="82dp"
        android:text="resend"
        app:layout_constraintBottom_toTopOf="@+id/edtOtp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSend"
        app:layout_constraintTop_toBottomOf="@+id/edtAadhar" />

    <EditText
        android:id="@+id/edtOtp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="61dp"
        android:background="@drawable/round_shape"
        android:ems="10"
        android:hint="Enter OTP"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnVerify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResend"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="285dp" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginBottom="92dp"
        android:text="verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtOtp" />

</android.support.constraint.ConstraintLayout>
